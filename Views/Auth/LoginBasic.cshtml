@{
  Layout = "_BlankLayout";
  ViewData["Title"] = "Login";
}

@section PageStyles {
<link rel="stylesheet" href="~/vendor/css/pages/page-auth.css">
}

@* ************** Content ************** *@

<div class="container-xxl">
  <div class="authentication-wrapper authentication-basic container-p-y">
    <div class="authentication-inner">
      <!-- Register -->
      <div class="card px-sm-6 px-0">
        <div class="card-body">
          <!-- Logo -->
          <div class="app-brand justify-content-center">
            <a href="/" class="app-brand-link gap-2">
              <span class="app-brand-logo demo">@await Html.PartialAsync("../_Partials/_Macros")</span>
              <span class="app-brand-text demo text-heading fw-bold">@TempData.Peek("appName")</span>
            </a>
          </div>
          <!-- /Logo -->
          <h4 class="mb-1">Welcome </h4>
          <p class="mb-6">Porfavor ingresa las credenciales</p>

                    <form id="formAuthentication" class="mb-6" >
            <div class="mb-6">
              <label for="email" class="form-label">Correo o Usuario</label>
              <input type="text" class="form-control" id="email" name="username" placeholder="Ingresa tu correo " autofocus>
            </div>
            <div class="mb-6 form-password-toggle">
              <label class="form-label" for="password">Contrase帽a</label>
              <div class="input-group input-group-merge">
                <input type="password" id="password" class="form-control" name="password" placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;" aria-describedby="password" />
                <span class="input-group-text cursor-pointer"><i class="bx bx-hide"></i></span>
              </div>
            </div>
            <div class="mb-8">
              <div class="d-flex justify-content-between mt-8">
                <div class="form-check mb-0 ms-2">
                  <input class="form-check-input" type="checkbox" id="remember-me">
                  <label class="form-check-label" for="remember-me">
                    Recordar
                  </label>
                </div>
                <a href="/Auth/ForgotPasswordBasic">
                  <span>Olvidaste tu contrase帽a?</span>
                </a>
              </div>
            </div>
           
            <div class="mb-6">
            <button id="submitButton" class="btn btn-primary d-grid w-100" type="submit">Login</button>
            </div>
          </form>
          <div id="messageContainer"></div>
          <p class="text-center">
            <span>New on our platform?</span>
            <a href="/Auth/RegisterBasic">
              <span>Crar cuenta</span>
            </a>
          </p>
        </div>
      </div>
      <!-- /Register -->
    </div>
  </div>
</div>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@section PageScripts {
    <script>

        $(document).ready(function () {
          // Manejo del env铆o del formulario
          $('#formAuthentication').on('submit', function (e) {
            e.preventDefault(); // Evita el env铆o normal del formulario

            // Obtener los valores del formulario
            var username = $('#email').val();
            var password = $('#password').val();
            var $button = $('#submitButton'); // Referencia al bot贸n de env铆o

            // Mostrar efecto de carga en el bot贸n
            $button.prop('disabled', true).html('<span class="spinner-border spinner-border-sm"></span> Iniciando sesi贸n...');

            // Enviar la petici贸n AJAX
            $.ajax({
              url: "/Auth/Login", // URL de la acci贸n Login
              type: 'POST',
              data: {
                username: username,
                password: password,
              },
              success: function (response) {
                // Si la autenticaci贸n fue exitosa
                if (response.success) {
                  window.location.href = '/Dashboards/Index'; // Redirigir a la p谩gina principal
                } else {
                  // Mostrar mensaje de error
                  showMessage('Error: ' + response.message, 'danger');
                }
              },
              error: function (xhr, status, error) {
                // Manejar errores en la petici贸n
                showMessage('Ocurri贸 un error: ' + error, 'danger');
              },
              complete: function () {
                // Restaurar el bot贸n despu茅s de la respuesta
                $button.prop('disabled', false).html('Sign in');
              }
            });
          });

          // Funci贸n para mostrar mensajes de alerta
          function showMessage(message, type) {
            $('#messageContainer').html(`
              <div class="alert alert-${type} alert-dismissible fade show mt-3" role="alert">
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
              </div>
            `);
          }
        });
    </script>
}
