<script>
    $(document).ready(function () {
        // Ocultar las secciones al cargar la página
          $(".seccion-datos-padres, .seccion-datos-tutor").hide();

          $("#selector").change(function () {
             let seleccion = $(this).val();

             if (seleccion === "padres") {
                 $(".seccion-datos-padres").show();
                 $(".seccion-datos-tutor").hide();
             } else if (seleccion === "tutor") {
                 $(".seccion-datos-padres").hide();
                 $(".seccion-datos-tutor").show();
             } else {
                 $(".seccion-datos-padres, .seccion-datos-tutor").hide();
             }
          });

        // Llenar días
        for (let i = 1; i <= 31; i++) {
            $('#dia').append($('<option>', { value: i, text: i }));
        }

        // Llenar meses
        let meses = [
            "Enero", "Febrero", "Marzo", "Abril", "Mayo", "Junio",
            "Julio", "Agosto", "Septiembre", "Octubre", "Noviembre", "Diciembre"
        ];
        for (let i = 0; i < 12; i++) {
            $('#mes').append($('<option>', { value: i + 1, text: meses[i] }));
        }

        // Llenar años (últimos 100 años)
        let anioActual = new Date().getFullYear();
        for (let i = anioActual; i >= anioActual - 100; i--) {
            $('#anio').append($('<option>', { value: i, text: i }));
        }


    });
</script>
