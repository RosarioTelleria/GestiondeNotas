<style>
    .card-header {
        color: #696cff !important;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: #f5f5f5;
    }

    table {
        width: 1800%;
        background-color: white;
        border-collapse: collapse;
        text-align: center;
    }

</style>


<div class="container-fluid flex-grow-1 container-p-y">
    <div class="form-section-container">
        <div class="card mb-4">
            <h2 class="card-header" style="color: #696cff;">Gestión de Calificaciones</h2>
            <br />
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 mb-md-2">
                        <label class="form-label">Código del Profesor</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="col-md-3 mb-md-2">
                        <label class="form-label">Nombre del Profesor</label>
                        <input type="text" class="form-control" />
                    </div>
                    <div class="col-md-3 mb-md-2">
                        <label class="form-label">Asignatura</label>
                        <select class="form-control">
                            <option value="">-- Seleccione --</option>
                            <option value="a1">Computación</option>
                            <option value="a2">AEP</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-md-2">
                        <label class="form-label">Grado</label>
                        <select class="form-control">
                            <option value="">-- Seleccione --</option>
                            <option value="a1">Primero</option>
                            <option value="a2">Segundo</option>
                        </select>
                    </div>
                </div>

                <div class="tab-content mt-4">
                    <!-- pestañas del tabs -->
                    <ul class="nav nav-tabs" id="EvaluacionesTabs">
                        <li class="nav-item">
                            <a class="nav-link active" data-bs-toggle="tab" href="#Sistematicos">Sistematicos</a>
