@{
    ViewData["Title"] = "Asignaturas";
}
@section VendorStyles {
    <link rel="stylesheet" href="~/vendor/libs/apex-charts/apex-charts.css" />
}

@section VendorScripts {
    <script src="~/vendor/libs/apex-charts/apexcharts.js"></script>
}
@section PageScripts {
    <script src="~/js/dashboards-analytics.js"></script>
}
<!-- Bootstrap CSS -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Pacifico&display=swap" rel="stylesheet">

<style>
    body {
        background-color: #fff;
        font-family: 'Segoe UI', sans-serif;
        text-align: center;
        padding: 50px;
    }

    h1 {

        margin-bottom: 50px;
    }

    .card {
        /* border: 2px solid black; */
        transition: transform 0.3s, box-shadow 0.3s;
        text-decoration: none;
        color: black;
    }

        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 0 15px rgba(0,0,0,0.2);
        }

        .card img {
            width: 80px;
            height: 80px;
            margin-bottom: 20px;
        }


    .card-custom {
        height: 100%; /* Ocupar toda la altura del contenedor de columna */
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 20px;
    }

    .card-body-custom {
        flex-grow: 1;
        display: flex;
        flex-direction: column;
        justify-content: center;
    }

    .card-title-custom {
        margin-top: 15px;
        font-size: 1rem;
    }
</style>

<div class="container-fluid flex-grow-1 container-p-y">
    <div class="form-section-container">
        <div class="seccion-Asignaturas">
            <h3 class="text-center mb-4">Asignaturas</h3>

            <!-- Contenedor visual -->
            <div class="p-4 rounded-4 shadow-sm bg-light border">
                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-4">

                    <!-- Card 1 -->
                    <div class="col">
                        <a asp-controller="Notas" asp-action="Evaluaciones" class="card card-custom">
                            <img src="https://img.icons8.com/?size=100&id=MPbRPOoCQI8A&format=png&color=000000" alt="Matemática" width="70">
                            <div class="card-body-custom">
                                <h5 class="card-title-custom">Matemática</h5>
                            </div>
                        </a>
                    </div>

                    <!-- Card 2 -->
                    <div class="col">
                        <a asp-controller="Notas" asp-action="Evaluaciones" class="card card-custom">
                            <img src="https://img.icons8.com/?size=100&id=wNZ3FTgUzSQX&format=png&color=000000" alt="Lengua y Literatura" width="70">
                            <div class="card-body-custom">
                                <h5 class="card-title-custom">Lengua y Literatura</h5>
                            </div>
                        </a>
                    </div>

                    <!-- Card 3 -->
                    <div class="col">
                        <a asp-controller="Notas" asp-action="Evaluaciones" class="card card-custom">
                            <img src="https://img.icons8.com/?size=100&id=YEj5vqifTRtq&format=png&color=000000" alt="Química" width="70">
                            <div class="card-body-custom">
                                <h5 class="card-title-custom">QX</h5>
                            </div>
                        </a>
                    </div>

                    <!-- Card 4 -->
                    <div class="col">
                        <a asp-controller="Notas" asp-action="Evaluaciones" class="card card-custom">
                            <img src="https://img.icons8.com/?size=100&id=fBZ3XjmLC9ZY&format=png&color=000000" alt="Computación" width="70">
                            <div class="card-body-custom">
                                <h5 class="card-title-custom">Computación</h5>
                            </div>
                        </a>
                    </div>

                </div>
            </div>


        </div>
    </div>
</div>

<!-- Bootstrap JS -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>



