@{
    ViewData["Title"] = "Colaborador";
}
<div class="container mt-5">
    <div class="card mx-auto" style="max-width: 800px;">
        <div class="card-header">
            <h5 class="card-title">Datos del Colaborador</h5>
            <p class="text-muted">Ingrese la información del colaborador. Todos los campos marcados con * son obligatorios.</p>
        </div>
        <div class="card-body">
            <ul class="nav nav-tabs" id="colaboradorTabs">
                <li class="nav-item">
                    <a class="nav-link active" data-bs-toggle="tab" href="#informacion">Información Personal</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-bs-toggle="tab" href="#seguridad">Seguridad</a>
                </li>
            </ul>
            <div class="tab-content mt-3">
                <!-- Información Personal -->
                <div class="tab-pane fade show active" id="informacion">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Nombre *</label>
                                <input type="text" class="form-control" placeholder="Ingrese el nombre">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Apellido *</label>
                                <input type="text" class="form-control" placeholder="Ingrese el apellido">
                            </div>
                        </div>
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <label class="form-label">Correo Electrónico *</label>
                                <input type="email" class="form-control" placeholder="correo@ejemplo.com">
                            </div>
                        </div>
                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <label class="form-label">Teléfono *</label>
                                <input type="tel" class="form-control" placeholder="Ingrese el número de teléfono">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Cedula *</label>
                                <input type="text" class="form-control" placeholder="Ingrese su Cedula">
                            </div>
                        </div>
                        <div class="mt-3 row">
                            <div class="col-md-12">
                                <label class="form-label">Rol *</label>
                                <select class="form-select">
                                    <option selected>Seleccione un rol</option>
                                    <option value="admin">Administrador</option>
                                    <option value="editor">Editor</option>
                                    <option value="viewer">Visualizador</option>
                                    <option value="user">Usuario</option>
                                </select>
                            </div>
                        </div>
                    </form>
                </div>
                <!-- Seguridad -->
                <div class="tab-pane fade" id="seguridad">
                    <form>
                        <div class="mt-3">
                            <h6>Cambiar Contraseña</h6>
                        </div>

                        <div class="row g-3">
                            <div class="col mb-3">
                                <label class="form-label">Nueva Contraseña</label>
                                <input type="password" class="form-control" placeholder="••••••••">
                            </div>
                            <div class="col-md-12">
                                <label class="form-label">Confirmar Contraseña</label>
                                <input type="password" class="form-control" placeholder="••••••••">
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-primary">Guardar Colaborador</button>
            </div>
        </div>
    </div>
</div>
